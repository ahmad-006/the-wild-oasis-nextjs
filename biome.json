{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "ignoreUnknown": true,
    "includes": ["**"]
  },

  "formatter": {
    "enabled": false
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      },
      "style": {
        "useConst": "error"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      }
    },
    "domains": {
      "react": "recommended",
      "next": "recommended"
    }
  },

  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
